{
  "extends": "airbnb",
  "globals": {
    "describe": true,
    "expect": true,
    "it": true,
    "test": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 7
  },
  "plugins": [
      "standard",
      "promise"
  ],
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "max-len": [2, 100],
    "no-param-reassign": ["error", { "props": false }],
    "react/jsx-filename-extension": "off",
    "react/prefer-stateless-function": "off",
    "react/forbid-prop-types": ["error", { "forbid": ["any", "array"] }]
  },
  "env": {
    "browser": true,
    "node": true
  }
}
