{
  "extends": "airbnb",
  "globals": {
    "describe": true,
    "expect": true,
    "it": true,
    "test": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
      "standard",
      "promise"
  ],
  "rules": {
    "arrow-parens": [2, "as-needed"],
    "max-len": [2, 100],
    "no-param-reassign": ["error", { "props": false }],
    "react/jsx-filename-extension": "off",
    // "react/prefer-es6-class": ["error", "always"],
    "react/prefer-stateless-function": "off"
  },
  "env": {
    "browser": true,
    "node": true
  }
}
